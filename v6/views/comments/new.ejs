<%- include ("../partials/header") %>
<div class="container">
    <div class="row justify-content-center mb-5">
        <h1>make a comment <%= artist.name %></h1>
    </div>    
    <div class="row justify-content-center">
        <form action="/index/<%= artist._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="comment[author]" placeholder="author">
            </div>

            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            <a class="d-block" href="/display">Go back ListPage!</a> 
        </form>
    </div>    
      
</div>
<%- include ("../partials/footer") %>