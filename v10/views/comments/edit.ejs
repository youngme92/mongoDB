<%- include ("../partials/header") %>
<div class="container">
    <div class="row justify-content-center mb-5">
        <h1>EDIT a comment</h1>
    </div>    
    <div class="row justify-content-center">
        <form action="/index/<%= artist_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
            </div>
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            <a class="d-block" href="/display">Go back ListPage!</a> 
        </form>
    </div>    
      
</div>  
<%- include ("../partials/footer") %>