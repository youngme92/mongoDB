<%- include ("../partials/header") %>
<div class="container">
    <div class="row justify-content-center mb-5">
        <h1>Who is a new HotArtist</h1>
    </div>    
    <div class="row justify-content-center">
        <form action="/index/<%= artist._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="artist[name]" value="<%= artist.name %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="artist[url]" value="<%= artist.url %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="artist[description]" value="<%= artist.description %>">
            </div>
            <button class="btn btn-lg btn-primary btn-block">Edit!</button>
            <a class="d-block" href="/display">Go back ListPage!</a> 
        </form>
    </div>    
      
</div>
<%- include ("../partials/footer") %>